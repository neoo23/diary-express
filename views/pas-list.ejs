<div id="flexRow">
    <!-- cols images -->
    <%- include("images"); %>

    <!-- cols text, days -->
    <div class="pm1" style="width: 700px">
        <% var i=1; pas.forEach( (pa) => { %>
        <div style="width: 100%; background-color: rgb(54, 184, 216); border-radius: 12px; margin: 6px; float: left;">
            <span style="margin: 6px; float: right;"><%= pa.text == '' ? '' : '+' %> <%= pa.tag %></span>
            <h3 onclick="var e = document.getElementById('t<%= i %>'); var n = e.style.display == 'none'; e.style.display= n ? 'block' : 'none';">
                #<%= (i <= 9 ? '0' : '') + i %>. <%= pa.dd_mm_yyyy() %> <%= pa.title %></h3>
            <div id="t<%= i %>" style="display: none; padding: 12px; background-color: rgb(235, 184, 143); border-radius: 0 0 12px 12px;"><%= pa.text %></div>
        </div>
        <% i++; }); %>
    </div>
</div>
<script>setQuery('?icols=2');</script>