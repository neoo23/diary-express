<div id="flexRow">
    <!-- cols images -->
    <% 
        var icols = query.icols == undefined ? 2 : +query.icols;
        for( var d=1; d<=icols; d++) { %>
            <div class="pm1" style="width: 350px">
                <% if ( images != undefined && images.length > 0) { %>
                <% for ( var i=0; i < days.length   ; i++ ) { var img = imageSample(); %>
                    <img class="pm1" style="border-radius: 12px;" src="/<%= img %>?resize=<%= size %>" title="<%= img.substr(12) %>">
                <% }; %>
            </div>
        <% } %>
    <% } %>

    <!-- cols text, days -->
    <div class="pm1" style="width: 700px">
        <% var i=1; pas.forEach( (pa) => { %>
        <div style="width: 100%; background-color: rgb(54, 184, 216); border-radius: 12px; margin: 6px; float: left;">
            <span style="margin: 6px; float: right;"><%= pa.tag %></span>
            <h3>#<%= (i <= 9 ? '0' : '') + i %>. <%= pa.dd_mm_yyyy() %> <%= pa.title %></h3>
        </div>
        <% i++; }); %>
    </div>
</div>
<script>setQuery('?icols=2');</script>